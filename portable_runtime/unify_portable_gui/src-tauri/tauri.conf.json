{
    "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run start",
        "devPath": "http://localhost:3001",
        "distDir": "../build"
    },
    "package": {
        "productName": "unify_portable_gui",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
            "all": true
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/icon.ico"
            ],
            "identifier": "unify.gui",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": ["../../resources"],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [{
            "fullscreen": false,
            "height": 500,
            "resizable": true,
            "title": "Unify SDK",
            "width": 450
        }]
    }
}
